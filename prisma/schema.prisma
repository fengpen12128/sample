generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Trade {
  id               BigInt   @id @default(autoincrement())

  // 1) Context
  timeframe        String?
  trendAssessment  String?
  marketPhase      String?

  // 1.5) Trade details
  symbol           String
  tradePlatform    String?
  direction        String
  result           String
  tradeMode        String   @default("live")
  entryTime        DateTime
  exitTime         DateTime @default(now())
  pnlAmount        Float

  // 2) Setup
  setupType        String?
  setupQuality     String?
  entryType        String?

  // 3) Risk & Management
  entryPoint       Float    @default(0)
  closingPoint     Float    @default(0)
  slPoint          Float?
  tpPoint          Float?
  actualRMultiple  Float?
  plannedRMultiple Float?
  earlyExit        Boolean?

  // 4) Subjective Judgment
  entryReason      String?
  expectedScenario String?
  confidenceLevel  Int?

  // 5) Others
  screenshotUrl    String?
  telegramFileId   String?
  telegramFileUniqueId String?
  createdAt        DateTime @default(now())
}

